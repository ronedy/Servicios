<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <TextView
            android:id="@+id/perfilServicioIdUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Usuario"
            android:layout_marginLeft="40dp"
            android:textColor="@color/heading"
            android:textSize="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/perfilServicioIdServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Usuario"
            android:layout_marginLeft="40dp"
            android:textColor="@color/heading"
            android:textSize="20dp"
            android:visibility="gone"
            />






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            cardview:cardCornerRadius="20dp"
            cardview:cardElevation="10dp"
            android:background="@color/colorAccent"
            >



            <TextView
                android:id="@+id/perfilServicioNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo de servicio"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textAlignment="center"

                />


        </android.support.v7.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"

                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Publicante"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/btnVerPerfil"
                        android:layout_width="100dp"
                        android:layout_height="23dp"

                        android:text="Ver perfil"

                        android:textColor="@color/blanco"
                        android:background="@drawable/boton_redondo_celeste"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="10dp"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/servicioPerfilImagenUsuario"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/editarboton"
                        app:civ_border_width="5dp"
                        app:civ_border_color="@color/blanco"
                        />

                    <TextView
                        android:id="@+id/servicioPerfilPublicante2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:textSize="18dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#000000"
                        android:hint="Nombre Apellido"
                        android:fontFamily="sans-serif"
                        />



                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="20dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Descripcion"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/perfilServicioDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#000000"
                        android:hint="Descripción del servicio"
                        android:fontFamily="sans-serif"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Categoria"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/categoriaServicio"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_marginTop="31dp"
                        android:layout_marginBottom="20dp"
                        android:hint="Categoría del anuncio"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponibilidad"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/heading"
                        android:textSize="20dp"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp">

                        <CheckBox
                            android:id="@+id/checkDomingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="5dp"
                            android:clickable="false"
                            android:text="D"/>


                        <CheckBox
                            android:id="@+id/checkLunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="L"/>

                        <CheckBox
                            android:id="@+id/checkMartes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="M"/>

                        <CheckBox
                            android:id="@+id/checkMiercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="M"/>

                        <CheckBox
                            android:id="@+id/checkJueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="J"/>

                        <CheckBox
                            android:id="@+id/checkViernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="V"/>

                        <CheckBox
                            android:id="@+id/checkSabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:clickable="false"
                            android:text="S"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Horario"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/perfilServicioHorario"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_marginTop="31dp"
                        android:layout_marginBottom="20dp"
                        android:hint="No se ha especificado horario"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/perfilServicioDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_marginTop="31dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Dirección"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="20dp"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="23dp"
                    cardview:cardCornerRadius="20dp"
                    android:background="@color/colorAccent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textColor="@color/heading"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/perfilServicioTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:layout_marginTop="31dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Teléfono"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="20dp"
                        />

                </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/btnLlamar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Llamar"
                    android:textColor="@color/blanco"
                    android:background="@drawable/boton_redondo_celeste"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="5dp"

                    />

                <Button
                    android:id="@+id/btnServicioPerfilEditar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Editar servicio"
                    android:textColor="@color/blanco"
                    android:background="@drawable/boton_redondo_celeste"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</RelativeLayout>